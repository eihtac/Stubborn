{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}

{% block body %}
    <div class="card w-25 my-5">
        <h1 class="card-header fs-2">Mot de passe oublié ?</h1>

        <div class="card-body">
            <p>Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, {
                    label: 'Adresse e-mail'
                }) }}

                <button class="btn my-3">Confirmer</button>
            {{ form_end(requestForm) }}
        </div>
        
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
    </div>    
{% endblock %}
